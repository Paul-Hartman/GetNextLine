{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug get_next_line",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/get_next_line",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build get_next_line",
            "miDebuggerPath": "/usr/bin/gdb"  // Update this path if your gdb is located elsewhere
        }
    ]
}
